  "shortcuts": [
    {
      "name": "My Registry",
      "short_name": "Registry",
      "description": "View and manage your wedding registry",
      "url": "/registry",
      "icons": [{ "src": "/icons/registry-192x192.png", "sizes": "192x192" }]
    },
    {
      "name": "Messages",
      "short_name": "Messages",
      "description": "Check your messages and conversations",
      "url": "/messages",
      "icons": [{ "src": "/icons/messages-192x192.png", "sizes": "192x192" }]
    }
  ],
  "related_applications": [],
  "prefer_related_applications": false,
  "categories": ["shopping", "lifestyle", "social"],
  "screenshots": [
    {
      "src": "/screenshots/home-screen.jpg",
      "sizes": "1080x1920",
      "type": "image/jpeg",
      "platform": "narrow",
      "label": "Home Screen"
    },
    {
      "src": "/screenshots/registry.jpg",
      "sizes": "1080x1920",
      "type": "image/jpeg",
      "platform": "narrow",
      "label": "Registry Management"
    }
  ],
  "share_target": {
    "action": "/share-target",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url",
      "files": [
        {
          "name": "images",
          "accept": ["image/*"]
        }
      ]
    }
  },
  "protocol_handlers": [
    {
      "protocol": "web+vowswap",
      "url": "/protocol?url=%s"
    }
  ],
  "edge_side_panel": {
    "preferred_width": 400
  }
}
